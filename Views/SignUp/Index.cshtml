@model Readit.Models.User

@{
    ViewData["Title"] = "Sign Up";
}
<div class="container">
    <div class="row">
        <div class="col img-container">
            <img class="sign-walk-img" src="sign-walk.svg" />
        </div>

        <div class="col">
            <br />
            <h1 class="welcome-title">Welcome, new user.</h1>
            <asp:form class="form-control" 
                style="background-color:#D9D9D9; width: 584px; height: 540px; border-radius: 30px; position relative;" 
                asp-controller="SignUp" 
                asp-action="CreateUser"
            >
                <br />
                <div class="form-group username-group ">
                    <label asp-for="Username" CssClass="input-label">Username</label>
                    <input type="text" class="form-control input-full" placeholder="Username">
                    <br />

                </div>
                <div class="form-group email-group">
                    <label asp-for="Email" class="input-label">E-mail</label>
                    <input type="email" class="form-control input-full" aria-describedby="emailHelp" placeholder="E-mail">
                    <br />

                </div>
                <div class="form-group password-group row">
                    <div class="col">
                        <label asp-for="Password" class="input-label">Password</label>
                        <input type="password" class="form-control input-half" placeholder="Password">
                    </div>
                    <div class="col">
                        <label for="password-confirm" class="input-label">Confirm Password</label>
                        <input type="password" class="form-control input-half" placeholder="Confirm Password" required>
                    </div>
                    @*@{
                        string Password = ViewData["Password"].ToString();
                        string ConfirmPassword = ViewData["password-confirm"].ToString();

                        if (!Password.Equals(ConfirmPassword)) {
                            <div class="invalid-feedback">
                                Passwords do not match.
                            </div>
                        }
                    }*@

                </div>
                <div class="form-group submit-group">
                    <br />
                    <br />
                    <button type="submit" class="btn submit-btn">Register</button>
                    <br />

                    <a href="Login/Index" class="login-redirect">Already have an account? Login here</a>
                </div>
            </asp:form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
