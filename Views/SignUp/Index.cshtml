@model Readit.Models.Entities.Member

@{
    ViewData["Title"] = "Sign Up";
}
<div class="container">
    <div class="row">
        <div class="col img-container">
            <img class="sign-walk-img" src="images/sign-walk.svg" />
        </div>

        <div class="col">
            <br />
            <h1 class="welcome-title">Welcome, new user.</h1>
            <form class="form-control needs-validation" 
                style="background-color:#D9D9D9; width: 584px; height: 540px; border-radius: 30px; position relative;" 
                asp-controller="/SignUp"
                asp-action="CreateMember"
                method="post">
                <br />
                <div class="form-group username-group ">
                    <label for="Username" class="input-label">Username</label>
                    <input asp-for="Username" type="text" class="form-control input-full" placeholder="Username" required b-1hx6fbnuan>
                    <br />
                </div>
                <div class="form-group email-group">
                    <label for="Email" class="input-label">E-mail</label>
                    <input asp-for="Email" type="email" class="form-control input-full" aria-describedby="emailHelp" placeholder="E-mail" required b-1hx6fbnuan>
                    <br />

                </div>
                <div class="form-group password-group row">
                    <div class="col">
                        <label for="Password" class="input-label" b-1hx6fbnuan>Password</label>
                        <input asp-for="Password" type="password" id="password-input input-half" class="form-control input-half" placeholder="Password" required b-1hx6fbnuan>
                    </div>
                    <div class="col">
                        <label for="Password-confirm" class="input-label">Confirm Password</label>
                        <input for="Password-confirm" type="password" id="confirm-password-input" class="form-control input-half" placeholder="Confirm Password" required>
                    </div>
                </div>
                <div class="form-group submit-group">
                    <br />
                    <br />
                    <button type="submit" onclick="confirmPassword()" class="btn submit-btn">Register</button>
                    <br />

                    <a href="Login/Index" class="login-redirect">Already have an account? Login here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
