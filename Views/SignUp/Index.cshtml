@model Readit.Models.User

@{
    ViewData["Title"] = "Sign Up";
}
<div class="container">
    <div class="row">
        <div class="col img-container">
            <img class="sign-walk-img" src="sign-walk.svg" />
        </div>

        <div class="col">
            <br />
            <h1 class="welcome-title">Welcome, new user.</h1>
            <form class="form-control" 
                style="background-color:#D9D9D9; width: 584px; height: 540px; border-radius: 30px; position relative;" 
                asp-controller="SignUp"
                asp-action="CreateUser"
                method="post">
                <br />
                <div class="form-group username-group ">
                    <label for="Username" class="input-label">Username</label>
                    <input type="text" class="form-control input-full" placeholder="Username" required>
                    <br />
                </div>
                <div class="form-group email-group">
                    <label for="Email" class="input-label">E-mail</label>
                    <input type="email" class="form-control input-full" aria-describedby="emailHelp" placeholder="E-mail" required>
                    <br />

                </div>
                <div class="form-group password-group row">
                    <div class="col">
                        <label for="password" class="input-label">Password</label>
                        <input for="password" type="password" id="password-input" class="form-control input-half" placeholder="Password" required>
                    </div>
                    <div class="col">
                        <label for="password-confirm" class="input-label">Confirm Password</label>
                        <input for="password-confirm" type="password" id="confirm-password-input" class="form-control input-half" placeholder="Confirm Password" required>
                        <div id="err-mess" class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="form-group submit-group">
                    <br />
                    <br />
                    <button type="submit" onclick="confirmPassword()" class="btn submit-btn">Register</button>
                    <br />

                    <a href="Login/Index" class="login-redirect">Already have an account? Login here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
