@model Readit.Models.Entities.Member

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
<div class="card user-card">
    <div class="card-body">
        <h5 class="card-title">Hello, @Model.Username.</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Email</h6>
        <div>
            <span class="stats"><p>@ViewData["CommentCount"]</p></span>
            <i class="bi bi-chat icon stats"></i>
            <span class="stats"><p>@ViewData["PostCount"]</p></span>
            <i class="bi bi-sticky icon stats"></i>
            <span class="stats"><p>@ViewData["LikesCount"]</p></span>
            <i class="bi bi-hand-thumbs-up icon stats"></i>
        </div>
        <a href="" class="btn btn-primary">Edit</a>
    </div>
</div>