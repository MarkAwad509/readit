@using Readit.Models.Entities
@model Readit.Models.Entities.Member
@{
    ViewData["CommentCount"] = ViewBag.CommentCount;
    ViewData["PostCount"] = ViewBag.PostCount;
    ViewData["LikesCount"] = ViewBag.LikesCount;
    ViewData["Title"] = "Profile";
    ViewData["user"] = ViewBag.user;
    Member member = (Member)ViewData["user"];
}
<div class="container">
    <div class="row">
        <div class="col-sm-auto link-col">
            @foreach (Link link in (List<Link>)ViewBag.links){
                <partial name="_ProfileLink" model="@link" view-data="ViewData" />
            }
        </div>
        <span>Don't have any links?<a asp-controller="Home" asp-action="Create"> Make one here.</a></span>

        <div class="col-sm-auto member-col">
            <partial name="_Profile" model="@member" view-data="ViewData"/>
        </div>
    </div>
</div>